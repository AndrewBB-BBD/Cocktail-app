@page
@using CocktailApp.Model
@model LoginModel

<div class="container border" style="padding:40px;max-width:90%;margin-top:2em;">
  <h4>Welcome Back! Please Login Below:</h4>
  <br>
  <form method="post">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="form-group row" style="margin-bottom: 0.8em;">
      <div class="col-2">
        <label asp-for="Credential.UserName"></label>
      </div>
      <div class="col-5">
        <input type="text" asp-for="Credential.UserName" class="form-control" style="width:75%;"/>
        <span class="text-danger" asp-validation-for="Credential.UserName"></span>
      </div>
    </div>
    <div class="form-group row" style="margin-bottom: 0.8em;">
      <div class="col-2">
        <label asp-for="Credential.Password"></label>
      </div>
      <div class="col-5">
        <input type="password" asp-for="Credential.Password" class="form-control" style="width:75%;"/>
        <span class="text-danger" asp-validation-for="Credential.Password"></span>
      </div>
      <br>
      <br>
      @if (@Model.userExists == false)
      {
        <div>
          <span class="text-danger">Invalid User Name or Password! Please try again.</span>
        </div>
      }
    </div>
    <br>
    <div class="form-group row" style="margin-bottom: 0.8em;">
      <div class="col-2">
        <input type="submit" class="btn btn-primary" value="Login" />
        <button type="button" class="btn btn-secondary"><a style="text-decoration:none;color:white;" asp-page="/Index">Cancel</a></button>
      </div>
    </div>
  </form>
</div>